<!DOCTYPE html>
<html>
<head>
  <title>HolyShirt</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class='container'>
  <h2><%= link_to "Holy Shirt", root_path %></h2>
  <div class="row">
    <div class="col-xs-6">
      <ul class="list-inline">
        <li><%= link_to "See all the shirts", shirts_path %> </li>
        <li> <%= link_to "Buy a new shirt", random_shirt_path %> </li>
      </ul>
    </div>
    <div class="col-xs-3">
      <% if user_signed_in? %>
         Welcome, <%= current_user.username %>
         <%= link_to "Sign out", sign_out_path, method: :delete %>
       <% else %>
         <%= form_tag sign_in_path do %>
           <%= text_field_tag :username, nil, placeholder: "Username" %>
           <%= password_field_tag :password, nil, placeholder: "Password" %>
           <%= submit_tag "Log in", class: 'btn btn-success'%>
         <% end %>
         <%= link_to "Or Sign Up", sign_up_path %>
      <% end %>
    </div>
    <div class="col-xs-3">
      <form action="/search" method="get">
        <input type="search" name="q" id="search">
        <input type="submit" value="Search!">
      </form>
    </div>
  </div>
  <% if notice %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
  <% end %>

  <% if alert %>
    <div class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= alert %>
    </div>
  <% end %>

  <%= yield %>

</body>
</html>
