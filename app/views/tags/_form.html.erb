<% if @tag.errors.any? %>
  <ul>
    <% @tag.errors.full_messages.each do |error|  %>
       <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @tag do |f| %>
  <fieldset>
    <legend>Tag Name fields</legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </fieldset>
  <%= f.submit %>
<% end %>
