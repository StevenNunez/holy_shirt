  <div class="row">
    <div class="col-xs-6">
      <%= form_for @shirt do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :artist %>
        <%= f.text_field :artist, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :image_url %>
        <%= f.url_field :image_url, class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= f.label :url %>
        <%= f.url_field :url, class: "form-control", required: true %>
      </div>
      <%= f.submit nil, class: "btn btn-success" %>
    <% end %>

  </div>
</div>
